{
  "name": "angular-schematics-extension",
  "displayName": "Angular Schematics",
  "description": "在Angular项目中快速生成原理图",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:angular-schematics.generate",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "angular-schematics.generate",
        "title": "Angular 原理图",
        "category": "Angular"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "angular-schematics.generate",
          "group": "navigation",
          "when": "workspaceFolderCount > 0"
        }
      ],
      "commandPalette": [
        {
          "command": "angular-schematics.generate",
          "when": "workspaceFolderCount > 0"
        }
      ],
      "editor/context": [
        {
          "command": "angular-schematics.generate",
          "group": "navigation",
          "when": "workspaceFolderCount > 0"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "tsc -p ./",
    "build": "node esbuild.config.js",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "esbuild": "^0.19.0",
    "@vscode/test-electron": "^2.3.8",
    "@types/mocha": "^10.0.0",
    "@types/glob": "^8.0.0",
    "mocha": "^10.0.0",
    "glob": "^10.0.0"
  },
  "dependencies": {
    "@angular/cli": "^17.0.0",
    "@angular-devkit/schematics": "^17.0.0"
  }
}
